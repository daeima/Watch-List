<div class="home-banner">
    <h1><span id="banner-typed-text"></span></h1>
</div>

<div class="container" style="margin-top: 50px;">
  <div class="d-flex justify-content-between">
    <h2 class="list-banner">My lists</h2>
    <%= link_to "Create a movie list", new_list_path, class:"btn btn-success"  %>
  </div>

  <div class="d-flex flex-wrap my-4">
    <% @lists.each do |list|%>
      <div class="card d-inline-flex justify-content-between  mx-2" style="width:18rem">
      <%= link_to list.name, list_path(list.id), class: "card-body text-center text-nowrap"%>
      </div>
    <% end %>
  </div>
</div>
