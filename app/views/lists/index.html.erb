<div class="container">
  <div>
    <h2>My lists</h2>
    <%= link_to "Create a movie list", new_list_path, class:"btn btn-success"  %>
  </div>

  <div class="row">
    <% @lists.each do |list|%>
      <div class="card" style="width:18rem">
      <%= link_to list.name, list_path(list.id), class: "card-body"%>
      </div>
    <% end %>
  </div>
</div>
